@using BTCPayServer.Client
@using BTCPayServer.Services.Stores
@inject StoreRepository StoreRepository

@{
    var storeId = Context.GetStoreData()?.Id;
    if (string.IsNullOrEmpty(storeId))
    {
        return;
    }
}

<li class="nav-item">
    <a class="nav-link @ViewData.IsActivePage("Flash", "Index")" 
       asp-controller="UIFlash" 
       asp-action="Index" 
       asp-route-storeId="@storeId">
        <span class="fa fa-bolt"></span>
        <span>Flash Lightning</span>
    </a>
</li>

<li class="nav-item">
    <a class="nav-link @ViewData.IsActivePage("Flash", "PayoutDashboard")" 
       asp-controller="FlashPayout" 
       asp-action="Dashboard" 
       asp-route-storeId="@storeId">
        <span class="fa fa-dashboard"></span>
        <span>Flash Payouts</span>
    </a>
</li>