@{
    ViewData["Title"] = "Flash Lightning";
    Layout = "_Layout";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center">
                <img src="~/img/icons/flash.svg" width="50" height="50" class="me-3" alt="Flash Logo" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' width=\'50\' height=\'50\'><path d=\'M11 21h-1l1-7H7.5c-.58 0-.912-.753-.588-1.266L12.562 3h1l-1 7h3.5c.555 0 .869.73.55 1.221L11 21Z\' fill=\'%23FFD700\'/></svg>'" />
                <h1 class="mb-0">Flash Lightning Integration</h1>
            </div>
            <p class="text-muted mt-2">Version: @ViewData["PluginVersion"]</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">About Flash</h2>
                </div>
                <div class="card-body">
                    <p>
                        Flash is a Bitcoin-native Lightning Network wallet that enables you to send and receive
                        payments instantly with minimal fees. The Flash plugin for BTCPay Server provides
                        seamless integration with Flash's Lightning Network capabilities.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0"><i class="fas fa-credit-card me-2"></i>Boltcard Topup</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Top up your Boltcard directly using Flash wallet. This dedicated flow creates
                        invoices that are compatible with Flash's mobile wallet.
                    </p>
                    <div class="mt-auto text-center">
                        <a href="/plugins/flash/boltcard" class="btn btn-primary">
                            <i class="fas fa-arrow-right me-2"></i>Go to Boltcard Topup
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mb-4 mb-lg-0">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0"><i class="fas fa-wallet me-2"></i>Lightning Address</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Create and manage Lightning Addresses for your store. Accept Lightning payments via email-style
                        addresses like you@yourstore.com.
                    </p>
                    <div class="mt-auto text-center">
                        <a href="#" class="btn btn-secondary">
                            <i class="fas fa-code me-2"></i>Coming Soon
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="h5 mb-0"><i class="fas fa-cog me-2"></i>Configuration</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Configure your Flash Lightning integration. Set up API keys and customize
                        payment options for your BTCPay Server.
                    </p>
                    <div class="mt-auto text-center">
                        <a href="#" class="btn btn-secondary">
                            <i class="fas fa-code me-2"></i>Coming Soon
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="h5 mb-0"><i class="fas fa-book me-2"></i>Documentation & Resources</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="h6">Getting Started</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="https://flashapp.me/" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-external-link-alt me-2"></i>Flash Website
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="https://docs.flashapp.me/api" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-book me-2"></i>Flash API Documentation
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h4 class="h6">Support</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="https://github.com/lnflash/btcpayserver-flash-plugin" target="_blank" class="text-decoration-none">
                                        <i class="fab fa-github me-2"></i>GitHub Repository
                                    </a>
                                </li>
                                <li>
                                    <a href="https://github.com/lnflash/btcpayserver-flash-plugin/issues" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-bug me-2"></i>Report an Issue
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card bg-light">
                <div class="card-body">
                    <h4 class="h5 mb-3"><i class="fas fa-info-circle me-2"></i>Flash Status</h4>
                    <p class="mb-0">
                        <span class="badge bg-success me-2">Active</span>
                        Plugin is installed and operational
                    </p>
                    <hr>
                    <p class="small mb-0">
                        <i class="fas fa-code-branch me-2"></i>Version: @ViewData["PluginVersion"]
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>