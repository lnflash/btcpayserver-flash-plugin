@using BTCPayServer.Plugins.Flash.Models
@model FlashSettings

@{
    ViewData["Title"] = "Flash Lightning Settings";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-10">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">Configure Flash Lightning Connection</h3>
            </div>
            <div class="card-body">
                <form method="post" asp-action="UpdateFlashSettings">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="BearerToken" class="form-label"></label>
                        <input asp-for="BearerToken" class="form-control" type="password" autocomplete="off" placeholder="Enter your Flash Bearer token"/>
                        <span asp-validation-for="BearerToken" class="text-danger"></span>
                        <small class="form-text text-muted">
                            Enter the Bearer token from your Flash account. You can find this in the Flash mobile app.
                        </small>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ApiUrl" class="form-label"></label>
                        <input asp-for="ApiUrl" class="form-control" />
                        <span asp-validation-for="ApiUrl" class="text-danger"></span>
                        <small class="form-text text-muted">
                            The Flash API URL. Default: https://api.flashapp.me/graphql
                        </small>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button name="command" type="submit" value="save" class="btn btn-primary">Save</button>
                        <button name="command" type="submit" value="test" class="btn btn-secondary">Test Connection</button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">Flash Integration Setup</h3>
            </div>
            <div class="card-body">
                <p>To use Flash as your Lightning Network provider, follow these steps:</p>
                <ol>
                    <li>Enter your Flash Bearer token above and save your settings</li>
                    <li>Test the connection to ensure your token is valid</li>
                    <li>Configure your store to use Flash as a Lightning payment method</li>
                </ol>
                <p>
                    <a href="https://flashapp.me" target="_blank" rel="noreferrer noopener">Learn more about Flash</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}