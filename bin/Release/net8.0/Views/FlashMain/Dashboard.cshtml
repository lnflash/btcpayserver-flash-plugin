@model string
@{
    ViewData["Title"] = "Flash Dashboard";
    var storeId = Model;
    var isConfigured = (bool)(ViewData["IsConfigured"] ?? false);
    var pluginVersion = ViewData["PluginVersion"]?.ToString() ?? "Unknown";
}

<partial name="_StatusMessage" />

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center">
                <img src="~/img/icons/flash.svg" width="50" height="50" class="me-3" alt="Flash Logo" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' width=\'50\' height=\'50\'><path d=\'M11 21h-1l1-7H7.5c-.58 0-.912-.753-.588-1.266L12.562 3h1l-1 7h3.5c.555 0 .869.73.55 1.221L11 21Z\' fill=\'%23FFD700\'/></svg>'" />
                <h1 class="mb-0">Flash Dashboard</h1>
            </div>
        </div>
    </div>

    @if (!isConfigured)
    {
        <div class="row mb-4">
            <div class="col">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Flash is not configured for this store. <a asp-action="Settings" asp-route-storeId="@storeId" class="alert-link">Click here to configure</a>.
                </div>
            </div>
        </div>
    }

    <div class="row mb-4">
        <div class="col-md-6 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Boltcard Topup</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Top up your Boltcard directly using Flash wallet. This dedicated flow creates
                        invoices that are compatible with Flash's mobile wallet.
                    </p>
                    <div class="mt-auto">
                        <a asp-controller="BoltcardTopup" asp-action="Topup" asp-route-storeId="@storeId" class="btn btn-primary w-100">
                            Go to Boltcard Topup
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Lightning Settings</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Configure Flash as your Lightning Network payment processor.
                        Set up your API connection and customize payment settings.
                    </p>
                    <div class="mt-auto">
                        <a asp-action="Settings" asp-route-storeId="@storeId" class="btn btn-primary w-100">
                            Manage Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h3 class="h5 mb-0">About Flash</h3>
                </div>
                <div class="card-body">
                    <p>
                        Flash is a Bitcoin-native Lightning Network wallet that enables you to send and receive
                        payments instantly with minimal fees. The Flash plugin for BTCPay Server provides
                        seamless integration with Flash's Lightning Network capabilities.
                    </p>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h4 class="h6">Resources</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="https://flashapp.me/" target="_blank" class="text-decoration-none">
                                        <i class="fa fa-external-link"></i> Flash Website
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a href="https://docs.flashapp.me/api" target="_blank" class="text-decoration-none">
                                        <i class="fa fa-book"></i> Flash API Documentation
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h4 class="h6">Support</h4>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <a href="https://github.com/lnflash/btcpayserver-flash-plugin" target="_blank" class="text-decoration-none">
                                        <i class="fa fa-github"></i> Plugin Source Code
                                    </a>
                                </li>
                                <li>
                                    <a href="https://github.com/lnflash/btcpayserver-flash-plugin/issues" target="_blank" class="text-decoration-none">
                                        <i class="fa fa-bug"></i> Report an Issue
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Flash Plugin Version: @pluginVersion</small>
                </div>
            </div>
        </div>
    </div>
</div>