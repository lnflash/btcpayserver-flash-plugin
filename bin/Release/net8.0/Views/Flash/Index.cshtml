@{
    ViewData["Title"] = "Flash Plugin";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center">
                <img src="~/img/icons/flash.svg" width="50" height="50" class="me-3" alt="Flash Logo" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 24 24\' width=\'50\' height=\'50\'><path d=\'M11 21h-1l1-7H7.5c-.58 0-.912-.753-.588-1.266L12.562 3h1l-1 7h3.5c.555 0 .869.73.55 1.221L11 21Z\' fill=\'%23FFD700\'/></svg>'" />
                <h1 class="mb-0">Flash Lightning Integration</h1>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">About Flash</h2>
                </div>
                <div class="card-body">
                    <p>
                        Flash is a Bitcoin-native Lightning Network wallet that enables you to send and receive
                        payments instantly with minimal fees. The Flash plugin for BTCPay Server provides
                        seamless integration with Flash's Lightning Network capabilities.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Boltcard Topup</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Top up your Boltcard directly using Flash wallet. This dedicated flow creates
                        invoices that are compatible with Flash's mobile wallet.
                    </p>
                    <div class="mt-auto">
                        <select id="storeSelector" class="form-select mb-2">
                            <option value="">Select a store...</option>
                        </select>
                        <button id="boltcardTopupButton" class="btn btn-primary w-100" disabled>Go to Boltcard Topup</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4 mb-md-0">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Lightning Settings</h3>
                </div>
                <div class="card-body d-flex flex-column">
                    <p>
                        Configure Flash as your Lightning Network payment processor.
                        Set up your API connection and customize payment settings.
                    </p>
                    <div class="mt-auto">
                        <select id="settingsStoreSelector" class="form-select mb-2">
                            <option value="">Select a store...</option>
                        </select>
                        <button id="settingsButton" class="btn btn-primary w-100" disabled>Go to Settings</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-header">
                    <h3 class="h5 mb-0">Resources</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 px-0">
                            <a href="https://flashapp.me/" target="_blank" class="text-decoration-none">
                                <i class="fa fa-external-link"></i> Flash Website
                            </a>
                        </li>
                        <li class="list-group-item border-0 px-0">
                            <a href="https://docs.flashapp.me/api" target="_blank" class="text-decoration-none">
                                <i class="fa fa-book"></i> Flash API Documentation
                            </a>
                        </li>
                        <li class="list-group-item border-0 px-0">
                            <a href="https://github.com/lnflash/btcpayserver-flash-plugin" target="_blank" class="text-decoration-none">
                                <i class="fa fa-github"></i> Plugin Source Code
                            </a>
                        </li>
                        <li class="list-group-item border-0 px-0">
                            <a href="https://github.com/lnflash/btcpayserver-flash-plugin/issues" target="_blank" class="text-decoration-none">
                                <i class="fa fa-bug"></i> Report an Issue
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h2 class="h4 mb-0">Version Information</h2>
                </div>
                <div class="card-body">
                    <p>
                        Flash Plugin Version: <strong>@ViewData["PluginVersion"]</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fetch stores
            fetch('/api/v1/stores')
                .then(response => response.json())
                .then(stores => {
                    const storeSelector = document.getElementById('storeSelector');
                    const settingsStoreSelector = document.getElementById('settingsStoreSelector');
                    
                    stores.forEach(store => {
                        const option = document.createElement('option');
                        option.value = store.id;
                        option.textContent = store.name;
                        
                        storeSelector.appendChild(option.cloneNode(true));
                        settingsStoreSelector.appendChild(option);
                    });
                    
                    // Enable buttons if stores exist
                    if (stores.length > 0) {
                        document.getElementById('boltcardTopupButton').disabled = false;
                        document.getElementById('settingsButton').disabled = false;
                    }
                })
                .catch(error => console.error('Error fetching stores:', error));
            
            // Set up button handlers
            document.getElementById('boltcardTopupButton').addEventListener('click', function() {
                const storeId = document.getElementById('storeSelector').value;
                if (storeId) {
                    window.location.href = `/plugins/flash/boltcard/topup/${storeId}`;
                } else {
                    alert('Please select a store first');
                }
            });
            
            document.getElementById('settingsButton').addEventListener('click', function() {
                const storeId = document.getElementById('settingsStoreSelector').value;
                if (storeId) {
                    window.location.href = `/plugins/flash/settings/${storeId}`;
                } else {
                    alert('Please select a store first');
                }
            });
            
            // Update button state when selectors change
            document.getElementById('storeSelector').addEventListener('change', function() {
                document.getElementById('boltcardTopupButton').disabled = !this.value;
            });
            
            document.getElementById('settingsStoreSelector').addEventListener('change', function() {
                document.getElementById('settingsButton').disabled = !this.value;
            });
        });
    </script>
}